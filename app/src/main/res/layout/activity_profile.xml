<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="@color/purple">

    <ImageView
        android:id="@+id/btn_logout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="367dp"
        android:src="@drawable/iconlogout"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/prfl2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="150dp"
        android:layout_marginVertical="30dp"
        android:src="@drawable/baseline_account_circle_24" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prfl2" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardpop"
        android:layout_width="410dp"
        android:layout_height="250dp"
        android:layout_marginVertical="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="80dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="150dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logoutama"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:text="JAKAS provides the best solution"
            android:textSize="20dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="140dp"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>